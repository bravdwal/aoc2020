# USAGE: perl day03.pl <input-file>

$ROW_SIZE = 11;

$r = 0; # moeten we een rij verspringen?
$c = 0; # index van huidige kolom
while (<>) {
    chomp $_;

    print "r = $r, c = $c, \$_ = $_\n";
    
    if ($r == 0) {
	print "    subst = ", substr($_, $c, 1), "\n";
	$p++ if substr($_, $c, 1) eq "#";
	
	$c = ($c + 3) % $ROW_SIZE;
	$r = 1;
    } else {
	$r = 0;
    }
}

print "You've encountered $p trees\n";
